<div class="container mt-3">
    <div class="row">
        <div class="col">
            <h2>Form Tambah Data Contact</h2>

            <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% errors.forEach(error => { %>
                   <li><%= error.msg %></li>
                  <% }) %>
                </ul>
              </div>
            <% } %>

            <form method="post" action="/contact">
              <div class="row">
                <div class="col">
                  <div class="mb-3">
                    <label for="nama" class="form-label">Nama</label>
                    <input type="text" class="form-control" id="nama" name="nama" required>
                    <div id="emailHelp" class="form-text"></div>
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" id="email" name="email" required>
                    <div id="emailHelp" class="form-text"></div>
                  </div>
                  <div class="mb-3">
                    <label for="nohp" class="form-label">No HP</label>
                    <input type="text" class="form-control" id="nohp" name="nohp" required>
                    <div id="emailHelp" class="form-text"></div>
                  </div>
                </div>

                <div class="col">
                  <div class="mb-3">
                    <label for="nickname" class="form-label">Nickname</label>
                    <input type="text" class="form-control" id="nickname" name="nickname">
                    <div id="emailHelp" class="form-text"></div>
                  </div>
                  
                  <div class="row">
                    <div class="col-8">
                      <div class="mb-3">
                        <label for="gameID" class="form-label">ID</label>
                        <input type="text" class="form-control" id="gameID" name="gameID" min="0" pattern="[0-9]{9}" title="Harus terdiri dari 9 digit angka" placeholder="123456789">
                        <div id="emailHelp" class="form-text"></div>
                      </div>
                    </div>
                    <div class="col-4">
                      <div class="mb-3">
                        <label for="serverID" class="form-label">Server</label>
                        <input type="text" class="form-control" id="serverID" name="serverID" min="0" pattern="[0-9]{4}" title="Harus terdiri dari 4 digit angka" placeholder="1234">
                        <div id="emailHelp" class="form-text"></div>
                      </div>
                    </div>
                  </div>

                  <div class="mb-3">
                    <label for="highRank" class="form-label">Highest Rank</label>
                    <div class="row">
                      <div class="col-3">
                        <div class="mb-3">
                          <label class="form-control text-center" id="tier" name="tier">Mythic</label>
                        </div>
                      </div>
                      <div class="col-9">
                        <div class="mb-3">
                          <input type="number" class="form-control" id="highRank" name="highRank" min="0">
                          <div id="emailHelp" class="form-text"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                </div>
              </div>
              

                
                
                <button type="submit" class="btn btn-primary">Tambah Data Contact</button>
                <a href="/contact" class="btn btn-secondary">Kembali</a>
              </form>
        </div>
    </div>
</div>